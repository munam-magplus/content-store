<!doctype html>
<html>
<head>
<title>Content Store :: Institutional Account </title>
<!-- Latest compiled and minified CSS -->
    <!-- Header -->
<%= render :partial => "layouts/top_header"%>
    <!-- Header Ends --> 

</head>

<body>
<!-- Aside Start-->
    <%= render :partial => "layouts/sidebar"%>
    <!-- Aside Ends-->
<!--Main Content Start -->
  <section class="content"> 
    <!-- Page Content Start --> 
    <!-- ================== -->
    <div class="wrapper container-fluid">
      <ol class="breadcrumb">
           <li><a href="#">Home</a></li>
         <li><a> Manage User Account </a></li>
         <li><a>Institutional Account </a></li>
      </ol>

      <h2 class="H2-L1">Institutional Account</h2>
      <%= form_tag search_op_institution_accounts_path, :method => 'get', :remote => true, :class => "form-horizontal form-bg" do |f| %>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Select Publisher</label>
            <div class="col-sm-8">
              <%= select_tag 'publisher_id',options_from_collection_for_select(Publisher.all, 'id', 'publisher_name'), :prompt => "Select Publisher", :class => "form-control", style: "background-color: #eee;"%>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Institution ID:</label>
            <span class="col-sm-8">
            <%= text_field_tag :institution_id,"",:class => "form-control", :placeholder => "Institution ID" %>
            </span> 
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Lib./Dept. Name:</label>
            <span class="col-sm-8">
            <%= text_field_tag :libary_name,"",:class => "form-control", :placeholder => "Library Name" %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Institution Name:</label>
            <span class="col-sm-8">
            <%= text_field_tag :institution_name,"",:class => "form-control", :placeholder => "Institution Name" %>
            </span> 
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">IP Address:</label>
            <span class="col-sm-8">
            <%= text_field_tag :name,params[:ipadd],:class => "form-control", :placeholder => "IP Address" %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">City:</label>
            <span class="col-sm-8">
            <%= text_field_tag :city,"",:class => "form-control", :placeholder => "City" %>
            </span> 
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">State / Province:</label>
            <span class="col-sm-8">
            <%= text_field_tag :state,"",:class => "form-control", :placeholder => "State" %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Country:</label>
            <div class="col-sm-8">
             <% country_name %>
              <%= select_tag "country_code", options_from_collection_for_select(@country, "country_code", "country_name"),prompt: "Select Country", :class => "form-control", style: "background-color: #eee;" %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Status:</label>
            <span class="col-sm-8">
             <%= select_tag 'status',options_for_select(['active', 'inactive', 'pending']), :prompt => "select status", :class => "form-control", style: "background-color: #eee;" %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Contact First Name:</label>
            <span class="col-sm-8">
              <%= text_field_tag :first_name,"",:class => "form-control", :placeholder => "First Name" %>
            </span> 
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Contact Last Name:</label>
            <span class="col-sm-8">
              <%= text_field_tag :last_name,"",:class => "form-control", :placeholder => "Last Name" %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Contact Email:</label>
            <span class="col-sm-8">
              <%= text_field_tag :email,"",:class => "form-control", :placeholder => "Email" %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">New IP Request:</label>
            <span class="col-sm-8">
              <label><%= check_box_tag(:ip_address) %></label>
            </span>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 colx-12 text-right">

            <%= link_to '<i class="fa fa-plus-square-o" aria-hidden="true"></i>Create Institutional Accounts'.html_safe, new_institution_account_path, :id => "button_id", :class => "btn btn-sm pull-left" %>

            <%= button_tag fa_icon("search", text: "Search"), :class => "btn btn-sm", type: :submit, :id => "submit" %>

            <%= button_tag fa_icon("refresh", text: "Reset"), :class => "btn btn-sm" ,type: :reset%>

          </div>
        </div>
      <% end %>
      <div class="clearfix"></div>
      <div class="clearfix m-b-30"></div>
      <div id="search"></div>
    </div>  
    <!-- Footer Start -->
    <%= render :partial => "layouts/footer" %>
    <!-- Footer Ends --> 
  </section>
</body>
</html>
