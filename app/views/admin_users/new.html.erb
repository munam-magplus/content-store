<!doctype html>
<html>
<head>
<title>Content Store :: Create Admin Users </title>
<!-- Latest compiled and minified CSS -->
    <!-- Header -->
    <%= render :partial => "layouts/top_header"%>
    <!-- Header Ends --> 
</head>

<body>
<!-- Aside Start-->
    <%= render :partial => "layouts/sidebar"%>
    <!-- Aside Ends-->
<!--Main Content Start -->
  <section class="content"> 
    <!-- Page Content Start --> 
    <!-- ================== -->
    <div class="wrapper container-fluid">
      <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a>Manage User Account</a></li>
        <li><a>Create Admin User </a></li>
      </ol>

      <h2 class="H2-L1">Create Admin Users</h2>
       <%= form_for(:admin_user, url: admin_users_path) do |f| %>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Publisher<sup class="mandatory">*</sup> </label>
            <div class="col-sm-8">
              <%= f.select 'publisher_id',options_from_collection_for_select(publisher_names,'id', 'publisher_name'),{ :prompt => "Select Publisher"},{:class => "form-control", style: "background-color: #eee;"} %>
            </div>
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Email<sup class="mandatory">*</sup> </label>
            <div class="col-sm-8">
              <%= f.email_field :email,:required => true, :class => "form-control", :placeholder => "Email" %>
            </div>
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Password<sup class="mandatory">*</sup></label>
            <span class="col-sm-8">
            <%= f.password_field :password,:required => true, :class => "form-control", :placeholder => "Password" %>
            </span> 
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">First Name<sup class="mandatory">*</sup></label>
            <span class="col-sm-8">
            <%= f.text_field :first_name,:required => true, :class => "form-control", :placeholder => "First Name" %>
            </span> 
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Last Name<sup class="mandatory">*</sup></label>
            <span class="col-sm-8">
            <%= f.text_field :last_name,:required => true, :class => "form-control", :placeholder => "Last Name" %>
            </span>
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Country<sup class="mandatory">*</sup> </label>
            <span class="col-sm-8">
              <%= f.select 'country_code',options_from_collection_for_select(country, 'country_code', 'country_name'),{:required => true, :prompt => "please select"},{:class => "form-control"} %>
              
            </span> 
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label"> Language * <sup class="mandatory">*</sup> </label>
            <span class="col-sm-8">
              <%= f.select 'language', options_for_select([ "Dansk", "Polish", "Latvian", "English"]),{ :prompt => "Select Language"},{:class =>"form-control", style: "background-color: #eee;" } %>
            </span> 
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">User Type<sup class="mandatory">*</sup> </label>
            <span class="col-sm-8">
              <%= f.radio_button :user_type, 'mps' %>MPS
              <%= f.radio_button :user_type, 'publisher' %>Publisher
              <%= f.radio_button :user_type, 'member_publisher' %>Member Publisher
            </span> 
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <span class="col-sm-8">
             <%= check_box_tag(:mail) %>Send Email Comfirmation to Email Address above 
            </span> 
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="clearfix"></div>
        <div class="clearfix m-b-30"></div>
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 colx-12 text-right">

            <%= link_to '<i class="fa fa-plus-square-o" aria-hidden="true"></i>Search Admin User'.html_safe, admin_users_path, :id => "button_id", :class => "btn btn-sm pull-left" %>
            <%= f.submit "Submit", :class => "btn btn-sm" %>
            <%= f.button "Reset", :class => "btn btn-sm", type: :reset %>
          </div>
        </div>
      <% end %>
    </div>  
    <!-- Footer Start -->
    <%= render :partial => "layouts/footer" %>
    <!-- Footer Ends --> 
  </section>
</body>
</html>
