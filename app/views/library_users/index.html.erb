<p id="notice"><%= notice %></p>

<h1>Library Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>User name</th>
      <th>Password</th>
      <th>Confirm password</th>
      <th>Country</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @library_users.each do |library_user| %>
      <tr>
        <td><%= library_user.first_name %></td>
        <td><%= library_user.last_name %></td>
        <td><%= library_user.email %></td>
        <td><%= library_user.user_name %></td>
        <td><%= library_user.password %></td>
        <td><%= library_user.password_confirmation %></td>
        <td><%= library_user.country %></td>
        <td><%= library_user.status %></td>
        <td><%= link_to 'Show', library_user %></td>
        <td><%= link_to 'Edit', edit_library_user_path(library_user) %></td>
        <td><%= link_to 'Destroy', library_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Library User', new_library_user_path %>
