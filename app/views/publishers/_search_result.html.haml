%body{:class=>"body1"}
= render :partial => '/layouts/header'
%div{:class=>"div1"}
  %table{:bgcolor => "#cccccc", :border => "0", :cellpadding => "8", :cellspacing => "1", :width => "70%"}
  %table{:bgcolor => "#cccccc", :border => "0", :cellpadding => "8", :cellspacing => "1", :width => "100%", :class => "center"}
    %tbody
      %tr
        %td.tableheader Publisher Code
        %td.tableheader Publisher Name
        %td.tableheader Contact Name
        %td.tableheader Contact Email
      - if @publisher.present?
        %tr
          %td= @publisher.first.pub_code
          %td= @publisher.first.pub_name
          %td= @publisher.first.contact_first_name
          %td= @publisher.first.contact_email
= render :partial => '/layouts/footer'
