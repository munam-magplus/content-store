<html>
	<body class = "body1">
	  <%= render :partial => '/layouts/header'%>
		<div class="div1">

      <h1> Subscription Setup </h1>
      <table border="0" cellpadding="10" cellspacing="0">
        <tbody>
          <%= form_for @subscription, url: new_subscription_path do |f| %>
            <h3>Information</h3>
            <tr>
              <td>Subscription ID :</td>
			        <td><%= f.text_field :subscription_id, :class=> 'required'  %></td>
              <td>Subscription Name * :</td>
              <td><%= f.text_field :subscription_name %></td>
            </tr> 
            <tr> 
              <td>Publisher * :</td>
              <td><%= f.text_field :publisher %></td>
            </tr>
            <tr>
              <td>Subscription Description  :</td>
              <td><%= f.text_area :subscription_description %></td>
            </tr>
            <tr>
              <td>Subscription category :</td>
              <td><%= f.text_field :subscription_category %>
              </td>
            </tr>
            <tr>
              <td><strong>Content</strong></td>
            </tr>

            <tr>
              <td>Subject Group Name:</td>
              <td><%= f.text_field :subject_group_name %></td>
            </tr>
            <tr>
              <td>Subject Group Code:</td>
              <td><%= f.text_field :subject_group_code %></td>
            </tr>
            <tr>
              <td><strong>Length of Agreement</strong></td>
            </tr>
            <tr>
              <td>Subscription Type * :</td>
              <td><%= f.collection_select(:subscription_type, 
                [['Fixed Date Range', 1],
                ['Relative Date Range', 2]],{ :prompt => "Please select"}) %></td>
              <td>Duration* :</td>
              <td><%= text_field :duration %></td>
            </tr>
            <tr>
              <td><strong>Available for Institutional Accounts</strong></td>
            </tr>
            <tr>
              <td><strong>Purchase Information</strong></td>
            </tr>
            <tr>
              <td>Subscription Type * :</td>
              <td><%= f.select(:subscription_type, [
                ['Fixed Date Range', 1],
                ['Relative Date Range', 2]],{ :prompt => "Please select"}) %>
              </td>
              <td>Duration* :</td>
              <td><%= f.text_field :duration %>
                  <%= f.select(:subscription_type, options_for_select(['Select',0],['Years',1],['Months',2],['Weeks',3]))  %>
              </td>
            </tr>
            <td>
              <%= f.submit "Save" %>
            </td>

          <% end %>
        </tbody>
      </table>
      
    </div>
  </body>
</html>
