<!doctype html>
<html>
<head>
<title>Content Store :: Create Admin Users </title>
<!-- Latest compiled and minified CSS -->
    <!-- Header -->
    <%= render :partial => "layouts/top_header"%>
    <!-- Header Ends --> 
</head>

<body>
<!-- Aside Start-->
    <%= render :partial => "layouts/sidebar"%>
    <!-- Aside Ends-->
<!--Main Content Start -->
  <section class="content"> 
    <!-- Page Content Start --> 
    <!-- ================== -->
    <div class="wrapper container-fluid">
      <ol class="breadcrumb">
           <li><a href="#">Home</a></li>
         <li><a>Manage User Account</a></li>
         <li><a>Create Admin User </a></li>
      </ol>

      <h2 class="H2-L1">Create Admin Users</h2>
      <%= form_for(:admin_user, url: admin_user_index_path) do |f| %>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Publisher<sup class="mandatory">*</sup> </label>
            <div class="col-sm-8">
              <%= f.select 'publisher',options_from_collection_for_select(Publisher.all, 'id', 'publisher_name'),{ :prompt => "select publisher"},{:class => "form-control"} %>
            </div>
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Email<sup class="mandatory">*</sup> </label>
            <div class="col-sm-8">
              <%= f.text_field :email, :class => "form-control" %>
            </div>
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Confirm Email<sup class="mandatory">*</sup> </label>
            <div class="col-sm-8">
              <%= f.text_field :confirm_email, :class => "form-control" %>
            </div>
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Password</label>
            <span class="col-sm-8">
            <%= f.password_field :password, :class => "form-control" %>
            </span> 
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Confirm Password</label>
            <span class="col-sm-8">
            <%= f.password_field :confirm_password, :class => "form-control" %>
            </span>
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">First Name</label>
            <span class="col-sm-8">
            <%= f.text_field :first_name, :class => "form-control" %>
            </span> 
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Last Name</label>
            <span class="col-sm-8">
            <%= f.text_field :last_name, :class => "form-control" %>
            </span>
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Country<sup class="mandatory">*</sup> </label>
            <span class="col-sm-8">
            <%= f.text_field :country, :class => "form-control" %>
            </span> 
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Select Language * <sup class="mandatory">*</sup> </label>
            <span class="col-sm-8">
            <%= f.select(:language, options_for_select([['Select',0],[' Dansk',1],['Polish',2],['Latvian',3],['English',4]]), :class => "form-control")  %>
            </span> 
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">User Type<sup class="mandatory">*</sup> </label>
            <span class="col-sm-8">
              <%= f.radio_button :user_type, 'mps' %>MPS
              <%= f.radio_button :user_type, 'publisher' %>Publisher
              <%= f.radio_button :user_type, 'member_publisher' %>Member Publisher
            </span> 
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Role<sup class="mandatory">*</sup> </label>
            <span class="col-sm-8">
              <%= f.select(:role, options_for_select([['Please Select',0],[' MPS Admin',1],['Publisher',2],['Member Publisher',3],['Member Publisher Role with QA',4]]),:class => "form-control")  %>
            </span> 
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Publisher (s)<sup class="mandatory">*</sup> </label>
            <div class="col-sm-8">
              <%= f.text_field :publishers, :class => "form-control" %>
            </div>
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <span class="col-sm-8">
             <%= check_box_tag(:mail) %>Send Email Comfirmation to Email Address above 
            </span> 
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="clearfix"></div>
        <div class="clearfix m-b-30"></div>
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 colx-12 text-right">

            <%= link_to '<i class="fa fa-plus-square-o" aria-hidden="true"></i>Search Admin User'.html_safe, admin_user_index_path, :id => "button_id", :class => "btn btn-sm pull-left" %>
            <%= f.submit "Submit", :class => "btn btn-sm" %>
            <%= f.button "Reset", :class => "btn btn-sm", type: :reset %>
          </div>
        </div>
      <% end %>
    </div>  
    <!-- Footer Start -->
    <%= render :partial => "layouts/footer" %>
    <!-- Footer Ends --> 
  </section>
</body>
</html>
