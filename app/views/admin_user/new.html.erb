<html>
  <body class = "body1">
      <h1>Create Admin Users</h1>
      <table border="0" cellpadding="10" cellspacing="0">
        <tbody>
          <%= form_for(:admin_user, url: admin_user_create_path) do |f| %>
            <tr>
              <td>Publisher*</td>
              <td><%= f.collection_select :publisher, Publisher.all, :id, :publisher_name %></td>
            </tr> 
            <tr> 
              <td>Email*</td>
              <td><%= f.text_field :email %></td>
               <td>Confirm Email*</td>
              <td><%= f.text_field :confirm_email %></td>
            </tr>
            <tr> 
              <td>Password*</td>
              <td><%= f.text_field :password %></td>
               <td>Confirm Password*</td>
              <td><%= f.text_field :confirm_password %></td>
            </tr>       
            <tr> 
              <td>First Name* </td>
              <td><%= f.text_field :first_name %></td>
              <td>Last Name* </td>
              <td><%= f.text_field :last_name %></td>
            </tr>
            <tr>
              <td>Country</td>
              <td><%= f.text_field :country %></td>
              <td>Select Language * </td>
              <td><%= f.select(:language, options_for_select([['Select',0],[' Dansk',1],['Polish',2],['Latvian',3],['English',4]]))  %></td>
            </tr> 
            <tr> 
             <td>User Type </td>
              <td><%= f.radio_button :user_type, 'mps' %>MPS
                  <%= f.radio_button :user_type, 'publisher' %>Publisher
                  <%= f.radio_button :user_type, 'member_publisher' %>Member Publisher</td>
            </tr>
            <tr> 
             <td>Role* </td>
              <td><%= f.select(:role, options_for_select([['Please Select',0],[' MPS Admin',1],['Publisher',2],['Member Publisher',3],['Member Publisher Role with QA',4]]))  %></td>
            </tr>
            <tr>
              <td>Publisher (s)*</td>
              <td><%= f.text_field :publishers %></td>
            </tr> 
            <tr>
              <td height = "25" align = "left" >
                <%= check_box_tag(:mail) %>
                Send Email Comfirmation to Email Address above        
              </td>
            </tr>
            <tr> 
            	<td></td>
              
            <tr>
            	<td></td>
            	<td><%= f.submit "Submit" %>
            		<%= f.button "Reset", type: :reset %></td>
       		</tr>
          <% end %>
        </tbody>
      </table>
  </body>
</html>
