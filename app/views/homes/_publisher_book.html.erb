<%content_for :head do  %>
  <%= javascript_include_tag :carousel_showmanymoveone, :cache => true %>
<% end %>
  <div class="row">
    <div class="col-md-12 ">
      <div class="carousel carousel-showmanymoveone slide bx-wrapper" id="carousel123">
        <div class="carousel-inner">
          <% if @books.present? %>
            <% @books.each_with_index do |f,index| %>
              <div class="item <%= 'active' if index == 0 %>">
                <div class="col-xs-12 col-sm-6 col-md-3">
                  <div class="result media-result ebook">
                    <div class="cover">
                      <%= link_to image_tag("http://www.nyresearchpress.com/static/templates/template1/nysp/thumbnails/#{f.isbn}-T-FC.jpg"),books_description_homes_path(:book_id => f.id), :remote => true %>
                      <div class="details">
                        <h3 class="title"><%= link_to truncate(f.book_title.presence || "", length: 24), books_description_homes_path(:book_id => f.id), :remote => true %>
                        </h3>
                        <h4 class="author"><%= truncate(f.books_contributor.first_name.presence || "" +" "+f.books_contributor.last_name.presence || "", length: 14)%></h4>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>

        <a class="left carousel-control " href="#carousel123" data-slide="prev"><i class="fa fa-chevron-left glyphicon-chevron-left sliderArrowleft"></i></a>
        <a class="right carousel-control" href="#carousel123" data-slide="next"><i class="fa fa-chevron-right glyphicon-chevron-right sliderArrowright"></i></a>

      </div>
    </div>
  </div>

  <div class="col-sm-12 no-pad">
    <%= @publisher.welcome_text.html_safe unless @publisher.welcome_text.blank? %>
  </div>
 
