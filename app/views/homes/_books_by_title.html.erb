      <div class="pull-left">
        <h3>Results  1–<%= @books.count%></h3>
      </div>
      <div class="pull-right">
        
          <%= will_paginate @books%>
       
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
  </div>




























