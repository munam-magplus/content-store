<div class="container">
    <header>
      <div class="row">
        <div class="col-sm-6 col-md-6">
          <h1 class="logo_container">     
            <a class="logo"  href="#">
              <%= link_to image_tag(@publisher.publisher_logo(:original)), homes_path %>
            </a>
          </h1>
        </div>
      </div>
    </header>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="nav navbar-default" role="navigation">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li>
                <%= link_to "HOME", homes_path %>
              </li>
              <li>
                <%= link_to "ABOUT US",(about_homes_path), :remote => true %>  
              </li>
              <li>
                <%= link_to "CONTACT US",(contact_homes_path), :remote => true %>
              </li>
            </ul>

            <div class="searchmenu pull-right">
              <%= form_tag(search_homes_path, :method => "get", class: "navbar-form",:remote => true) do %>
                <div class="input-group add-on">
                 <%= text_field_tag :book_title, params[:search], required: true,placeholder: "Search by Title ", class: "form-control" %>
                  <div class="input-group-btn ">
                   <%= button_tag(type: 'submit', class: "btn btn-default form-control") do %>
                     <i class="fa fa-search"></i>
                    <% end %>
                  </div>
                </div>
                
                <div class='pull-right'>
                  <%= link_to advance_search_homes_path, class: "adcance_search", remote: true  do %>
                    <i class="fa fa-plus-circle head-plus"></i>
                  <% end %>
                </div>
              <%end%>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="menu_box">
          <div class="navbar-inner">
            <ul class="nav col-md-12" role="navigation">
              <li class="dropdown col-md-4 phone_width">
                <a id="drop1" href="#" role="button" class="dropdown-toggle" data-toggle="dropdown"> CATEGORY<b class="caret pull-right caret_white"></b>
                </a>
                <ul class="dropdown-menu" role="menu" aria-labelledby="drop1">
                  <li>
                    <% unless @publisher.subject_groups.blank? %>
                      <%@publisher.subject_groups.each do |subject_group| %>
                        <li> <%=link_to subject_group.subject_group_name ,books_by_category_homes_path(:subject_group_id => subject_group.id), :remote => true %>
                        </li>
                      <%end%>
                    <%end%>
                  </li>
                </ul>
              </li>
              <li class="dropdown col-md-4 thick_bord margin_author phone_width">
                <%= link_to "AUTHOR",get_author_homes_path(:letter => 'a'), :remote => true %>
              </li>
              <li class="dropdown col-md-4 thick_bord margin_title"><%= link_to "TITLE",books_by_title_homes_path, :remote => true %></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>