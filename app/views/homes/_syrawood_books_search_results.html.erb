<div class="container" style="padding-bottom:90px;">
<div class="row">
<section class="col-md-12">
  <div class="border_wrapper padding10px mtb25">
    <div id="bodydivs"> 
      <div class="col-md-12 border_bottom pb10">
        <h2 class="heading1 ">Search Results
          <form id="refineSearch"    class="form-inline pull-right">
            <input   value="Refine Search"   id="textToBeSearched" class="form-control input-sm  " type="text" >
            
            <input id="refineHref" value="Search"   class="btn btn-primary btn-sm responsive_margin_top20px border_radius3px" type="button">
          </form>
        </h2>
      </div>
      <div class="clearfix"> </div>
      <%if @books.count >1 %>
        <div class="dotted_bottom"> </div>
        <div class="alpha_category margin_bottom10px border_bottom">
          <div class="pull-left pageNumber">
            <p> Results  1–<%= @books.count%></p>
          </div>
          <div class="pull-right">
            <%= will_paginate @books,renderer: BootstrapPagination::Rails%>
          </div>
          <div class="clearfix"></div>
        </div>
      <% end %>

      <% if @books.present? %>
        <% @books.each do |f| %>
          <div class="clearfix"></div>
         
          <div class="margin_top20px im_width">
            <div class="pull-left margin_right5px margin_left5px effects search-result col-md-3">
              <%= link_to image_tag(f.logo.url(:original)), books_description_homes_path(:book_id => f.id),:remote => true, class: "cover2" %>
             </div>

            <div class="col-md-9">
              <h3><%= link_to f.book_title, books_description_homes_path(:book_id => f.id), :remote => true %></h3>
              <h3> By
                 : <span class="dark_yellow"><%= f.books_contributor.first_name %>&nbsp<%= f.books_contributor.last_name %> </span></h3>
              <p><strong> Description
                :</strong> 
                <% if f.book_blurb.length > 2 %>
                  <%= truncate(f.book_blurb, length: 30) %>
                  <%= link_to 'more', '', :class => "read-more-#{f.id}" %>
                  <script>
                    $('.read-more-<%= f.id %>').on('click', function(e) {
                      e.preventDefault()
                      $(this).parent().html('<strong> Description:</strong> <%= f.book_blurb %>')
                    })
                  </script>
                <% end %>
              </p>
             </div>
            <div class=" clearfix"> </div>
          </div>
        <% end %>
      <%else%>
        <div class="col-md-12"><h3> Record Not Found </h3></div>
      <%end%>

      <div class="clearfix"></div>
      <%if @books.count >1 %>
        <div class="border_bottom"> </div>
        <div class="alpha_category margin_bottom10px">
          <div class="pull-left pageNumber">
            <p>Results  1–<%= @books.count%></p>
          </div>
          <div class="pull-right">
            <%= will_paginate @books,renderer: BootstrapPagination::Rails%>
          </div>
          <div class="clearfix"> </div>
        </div>
      <% end %>
       
      <div class=" clearfix"> </div>
    </div>
  </div>
</section>
</div>
</div>