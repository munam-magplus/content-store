<% if @books.present? %>
  <p>
    <%= @publisher.welcome_text.html_safe  unless @publisher.welcome_text.blank? %>
  </p>
  <br>
  <h1 class="sectionHeading">FEATURED BOOKS</h1>
  <div class="row">
    <div class="col-sm-12 no-lr-pad">
      <% @books.each do |f| %>
         <div class="col-sm-3">
          <div class="result media-result ebook">
            <div class="cover"> 
            <%= link_to image_tag("http://www.#{@publisher.domain_name}.com/static/templates/template1/#{@publisher.publisher_code}/thumbnails/#{f.isbn}-T-FC.jpg", class: 'border-img'),books_description_homes_path(:book_id => f.id) %>
              <div class="details">
                <h3 class="title"><%= link_to truncate(f.book_title, length: 22), books_description_homes_path(:book_id => f.id) %>
                </h3>
                <h4 class="author"><%= f.books_contributor.first_name %>&nbsp<%= f.books_contributor.last_name  %> </h4>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%if @books.count >2 %>
    <div class="col-md-12  nopadding  bg-gray mt20">
      <div class="pull-left mt5">
        Results  1â€“10 of  <%= @books.count%>
      </div>
      <div class="pull-right">
        <ul class="pagination pagination-sm nomargin">
          <%= will_paginate @books,renderer: BootstrapPagination::Rails%>
        </ul>
      </div>
    </div>
  <% end %>
  <div class=" clearfix"> </div>
<% end %>
