<div class="border_wrapper padding10px mt5">
  <div class="row ">
    <div class="col-sm-4 pb-10">Search Results</div>
      <div class="text-right col-sm-8">
        <%= form_tag  refine_publishers_book_homes_path, :method => 'get',:id=>"Author Name/Book Title",:class=>"form-inline pull-right",:remote => true do %>
          <div class="form-group">
            <%= text_field_tag :book_title,"", :class => "form-control input-sm", :placeholder => "Refine Search" %>
            <%= hidden_field_tag "book_ids", ids  %>
          </div>
          <%= button_tag fa_icon("search", text: "Search"), :class => "btn btn-primary btn-sm responsive_margin_top20px border_radius3px", type: :submit %>
        <%end%>
      </div>

      <div class="col-md-12 col-xs-12 mt-20">
        <%if @books.count >1 %>
          <div class="bg-gray">
            <div class="col-sm-4 no-pad" style="padding-top: 6px;"> 
              Results  1–<%= @books.count%>
            </div>
          <div class="col-sm-8 text-right no-pad">
            <div class="pagination-frontend" id="sresult">
              <nav aria-label="Page navigation" style="clear:both;"> 
                <%= will_paginate @books,renderer: BootstrapPagination::Rails%>
              </nav>  
            </div>
          </div>

          <div class="clearfix"></div>
        </div>
        <% end %>
      </div>

      <div class="clearfix"></div>
     <% if @books.present? %>
      <% if @publisher.domain_name == "larsen-keller"%>
        <div>
        <div class="row">
            <% if @books.present? %>
              <% @books.each do |f| %>
                <div class="col-xs-12 col-sm-12 col-md-6">
                    <div class="product_list_box">
                      <div class="row">
                        <div class="col-xs-12 col-sm-4 col-md-4">
                         <%= link_to image_tag(f.logo.url(:medium),class: "img-responsive center-block img_border margin_bottom_10px"), books_description_homes_path(:book_id => f.id),:remote => true %>
                         </div>
                        <div class="col-xs-12 col-sm-8 col-md-8">
                          <div class="product_detail">
                            <div class="product_tittle">
                            <%= link_to f.book_title, books_description_homes_path(:book_id => f.id), :remote => true %>
                            </div>
                            <h4><strong>By :</strong> <%= truncate(f.books_contributor.first_name+" "+f.books_contributor.last_name, length: 14) %></h4>
                            <p><strong>Description :</strong>
                            <% if f.book_blurb.length > 2 %>
                              <%= truncate(f.book_blurb, length: 30) %>
                              <%= link_to 'more', '', :class => "read-more-#{f.id}" %>
                              <script>
                                $('.read-more-<%= f.id %>').on('click', function(e) {
                                  e.preventDefault()
                                  $(this).parent().html('<strong> Description:</strong> <%= f.book_blurb %>')
                                })
                              </script>
                            <% end %>
                            </p>
                           </div>
                        </div>
                      </div>
                    </div>
                </div>
              <% end %>
            <% end %>
        </div>                   
      </div>

      <% else %>
      <% @books.each do |f| %>
        <div class="col-md-12  no-pad mt-20">
          <div class="col-md-2  col-sm-2 col-xs-12 ">
            <div class="effects search-result "> 
            <%= link_to image_tag(f.logo.url(:medium),class: "img-responsive"), books_description_homes_path(:book_id => f.id),:remote => true, class: "cover2" %>
            </div>
          </div>
          <div class="col-md-10">
            <div class="">
              <h2>
               <%= link_to f.book_title, books_description_homes_path(:book_id => f.id), :remote => true %>
              </h2>
              <h3>By :<span class="dark_yellow"><%= truncate(f.books_contributor.first_name+" "+f.books_contributor.last_name, length: 14) %></span>
              </h3>
              <p><strong>
                Description
                :</strong> 
                 <% if f.book_blurb.length > 2 %>
                  <%= truncate(f.book_blurb, length: 30) %>
                  <%= link_to 'more', '', :class => "read-more-#{f.id}" %>
                  <script>
                    $('.read-more-<%= f.id %>').on('click', function(e) {
                      e.preventDefault()
                      $(this).parent().html('<strong> Description:</strong> <%= f.book_blurb %>')
                    })
                  </script>
                <% end %>
              </p>
            </div>
          </div>  
        </div>

        <div class="col-md-12 ">
          <div class="border_bottom-list"> </div>
        </div>

        <% end%>
      <% end %>
      <%else%>

      <div class="container">
       <h3> Record Not Found </h3>
      </div>
      <%end%>
       <!--lower pagination start -->
      <div class="col-md-12 col-xs-12 mt-20">
        <%if @books.count >1 %>
          <div class="bg-gray">
            <div class="col-sm-4 no-pad" style="padding-top: 6px;"> 
              Results  1–<%= @books.count%>
            </div>
          <div class="col-sm-8 text-right no-pad">
            <div class="pagination-frontend" id="sresult">
              <nav aria-label="Page navigation" style="clear:both;"> 
                <%= will_paginate @books,renderer: BootstrapPagination::Rails%>
              </nav>  
            </div>
          </div>

          <div class="clearfix"></div>
        </div>
        <% end %>
      </div>
        
    </div>
  </div>