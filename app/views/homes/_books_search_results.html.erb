<div class="border_wrapper padding10px">
  <div class="row ">
    <div class="col-sm-4 pb-10">Search Results</div>
      <div class="text-right col-sm-8">
        <form class="form-inline" action="/action_page.php">
          <div class="form-group">
            <input type="text" class="form-control" id="pwd" placeholder="Enter password" name="pwd">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>

      <div class="col-md-12 col-xs-12 mt-20">
        <%if @books.count >1 %>
          <div class="bg-gray">
            <div class="col-sm-4 no-pad" style="padding-top: 6px;"> 
              Results  1–10 of  <%= @books.count%>
            </div>
          <div class="col-sm-8 text-right no-pad">
            <div class="pagination-frontend">
              <nav aria-label="Page navigation" style="clear:both;"> 
                <%= will_paginate @books,renderer: BootstrapPagination::Rails%>
              </nav>  
            </div>
          </div>

          <div class="clearfix"></div>
        </div>
        <% end %>
      </div>

      <div class="clearfix"></div>

      <% @books.each do |f| %>
        <div class="col-md-12  no-pad mt-20">
          <div class="col-md-2  col-sm-2 col-xs-12 ">
            <div class="effects search-result "> 
            <%= link_to image_tag(f.logo.url(:medium),class: "img-responsive"), books_description_homes_path(:book_id => f.id),:remote => true, class: "cover2" %>


            </div>
          </div>
          <div class="col-md-10">
            <div class="">
              <h2>
               <%= link_to f.book_title, books_description_homes_path(:book_id => f.id), :remote => true %>
              </h2>
              <h3 title="Frank West">
                By
                : <span class="dark_yellow">Frank West</span></h3>
              <p><strong>
                Description
                :</strong> 
                <%= f.book_blurb%>.... <a href="/engineering-and-technology/9781632380104">
                More»</a> </p>
            </div>
          </div>  
        </div>

        <div class="col-md-12 ">
          <div class="border_bottom-list"> </div>
        </div>

        <% end%>


       <!--lower pagination start -->
      <div class="col-md-12 col-xs-12 mt-20">
        <div class="bg-gray">
          <div class="col-sm-4 no-pad" style="padding-top: 6px;">Results  1–10 of  227 </div>
          <div class="col-sm-8 text-right no-pad">
            <div class="pagination-frontend">
              <nav aria-label="Page navigation" style="clear:both;"> 
                <%= will_paginate @books,renderer: BootstrapPagination::Rails%>
              </nav>  
            </div>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>
        
    </div>
  </div>