<div class="col-md-12 gray_box mt5">
      <h2 class="heading1 border_bottom pull-left">Featured Books</h2>
      <div class="clearfix"></div>
      <% @books.each_with_index do |f,index| %>
        <ul class="c-carousel__slides mt20">
          <li class="col-md-4  col-sm-6">
            <article class="media-result">
              <div class="cover">
                <a href="#"><%= link_to image_tag("http://www.#{@publisher.domain_name}.com/static/templates/template1/#{@publisher.publisher_code}/thumbnails/#{@book_information.isbn}-T-FC.jpg",class: "img-responsive"), books_description_homes_path(:book_id => f.id) %></a>
              </div>
              <div class="details">
                <h3 class="title" title="9781632385444"><%= link_to truncate(f.book_title, length: 14), books_description_homes_path(:book_id => f.id) %></h3>
                <h4 class="author" title=">Betty Karasek"><%= truncate(f.books_contributor.first_name+" "+f.books_contributor.last_name, length: 14) %></h4>
              </div>
            </article>
          </li>
        </ul> 
      <% end %>
    <div class="clearfix"></div>
    <div class="col-md-12 mt20">
      <div class="pull-right">
        <%= will_paginate @books,renderer: BootstrapPagination::Rails %>
      </div>
      <div class="clearfix"></div>
    </div>

  </div>