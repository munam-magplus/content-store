              <%= text_field_tag :book_title, params[:search],required: true,placeholder: "Search by Title " %>
              <span class="input-group-btn">
                <%= button_tag(type: 'submit', class: "btn btn-info btn-lg") do %>
                 <i class="glyphicon glyphicon-search"></i>
               <% end %>
                <%= link_to 'Advance Search', advance_search_homes_path , class: "advance_btn", :remote => true%>
