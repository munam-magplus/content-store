<div class="main_link_section" >
  <div class="container">
    <ul class="main_tab">
      <li><a role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">Categories <i class="fa fa-angle-right pull-right"></i></a></li>
      <li><%= link_to "AUTHORS",get_author_homes_path(:letter => 'a'), :remote => true %></li>
      <li ><%= link_to "TITLE",books_by_title_homes_path(:letter => 'a'), :remote => true %></li>
    </ul>
  </div>
  <div class="collapse category_box clearfix" id="collapseExample">
    <div class="category_box">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-4 col-md-4">
            <% unless @publisher.subject_groups.blank? %>
              <ul>
                <%@publisher.subject_groups.each do |subject_group| %>
                  <li><i class="fa fa-angle-right leftIcon" aria-hidden="true"></i> <%=link_to subject_group.subject_group_name ,books_by_category_homes_path(:subject_group_id => subject_group.id), :remote => true %>
                  </li>
                <%end%>
              </ul>
            <%end%>
          </div>
        </div>
       </div>
    </div>
  </div>
