<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


<header class="container-fluid">
  <div class="row">
    <div class="col-sm-6 col-md-6">
      <h1 class="logo_container">     
      <%= image_tag @publisher.publisher_logo(:original)%>
      </h1>
    </div>
    <div class="col-md-6 mobView">
      <div class="right-header pull-right">
        <!-- top menue -->
        <div class="topmenue">
          <ul>
            <li><%= link_to '<i class="glyphicon glyphicon-home"></i>'.html_safe, homes_path, :class => "btn btn-sm pull-left" %><span>|</span> </li>
            <li><%= link_to "ABOUT US", about_homes_path, remote: true%><span>|</span> </li>
            <li><a href="#" target="_blank" =="">CATALOGUE</a> <span>|</span> </li>
            <li><%= link_to "CONTACT US", contact_homes_path, remote: true %></li>
          </ul>
        </div> 
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search" aria-describedby="basic-addon1">
          <span class="input-group-addon" id="basic-addon1"><i class="glyphicon glyphicon-search"></i></span>
          <div class="pull-right" style="margin-left:10px;">
            <a href="#"><span><i class="glyphicon glyphicon-plus-sign" style="font-size:1.9em; color:#fff"></i></span></a> 
          </div>
        </div>
        <div class="clearfix"> </div>
      </div>
    </div>
    <% if @publisher.domain_name == "syrawoodpublishinghouse" %>
    <div class="container-fluid" style="padding-right: 0px; padding-left: 0px;">
      <div class="row">
        <div class="nav navbar-default" role="navigation">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li><a href="#" class="dropdown-toggle" data-toggle="dropdown">SUBJECT <span class="caret"></span></a>
                <ul class="dropdown-menu multi-level">
              <% @publisher.subjects.each_with_index do |subject,i| %>
                  <li class="dropdown-submenu"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><%=subject.subject_name%></a>
                    <ul class="dropdown-menu">
                      <% subject.subject_groups.each do |subject_group| %>
                        <li>
                          <%=link_to subject_group.subject_group_name ,books_by_category_homes_path(:subject_group_id => subject_group.id), :remote => true %>
                        </li>
                      <% end %>
                    </ul>
                  </li>
              <% end %>
                </ul>
              </li>
              <li><a href="#">AUTHOR/EDITOR</a>  </li>
              <li ><a href="#">TITLE</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
    <% end %>
  </div>
</header>



 