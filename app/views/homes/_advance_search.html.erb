<h1 class="sectionHeading">Advance Search</h1>
<div class="row placeholders">
  <div class="wrapper container-fluid">
  <div class="clearfix"></div>
  <div class="clearfix"></div>
    <%= form_tag get_search_results_homes_path, :method => 'get',:class => "form-horizontal form-bg", :remote => true do %>
      <div class="col-md-6">
        <div class="form-group">
          <label for="taskName" class="col-sm-4 control-label">Book Title:</label>
          <div class="col-sm-8">
            <%= text_field_tag :book_title,"", :class => "form-control" %>
          </div>
           <div class="clearfix"></div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="bookISBN" class="col-sm-4 control-label">Select Publisher:</label>
          <span class="col-sm-8">
          <%= select_tag 'publisher_id',options_from_collection_for_select(publisher_names, 'id', 'publisher_name'), :prompt => "Select Publisher", :class => "form-control", style: "background-color: #eee;"%>
          </span> <div class="clearfix"></div></div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="bookISBN" class="col-sm-4 control-label">ISBN:</label>
          <span class="col-sm-8">
          <%= text_field_tag :isbn,"", :class => "form-control" %>
          </span> </div>
           <div class="clearfix"></div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="taskName" class="col-sm-4 control-label">Select Subject Group</label>
          <div class="col-sm-8">
            <%= select_tag 'subject_group_id',options_from_collection_for_select(SubjectGroup.all, 'id', 'subject_group_name'), :prompt => "Select subject Group",:required => true, :class => "form-control",style: "background-color: #eee;"%>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="bookISBN" class="col-sm-4 control-label">Publication Year:</label>
          <span class="col-sm-8">
            <%= select_year(Date.today, {:start_year => Time.now.year, :end_year => Time.now.year - 95, :field_name => :publication_year},{:prompt => "Select year",:required => true, :class => "form-control"})%>
          </span> <div class="clearfix"></div></div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="bookISBN" class="col-sm-4 control-label">Fromat:</label>
          <span class="col-sm-8">
          <%= text_field_tag :format,"", :class => "form-control" %>
          </span> </div>
           <div class="clearfix"></div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="bookISBN" class="col-sm-4 control-label">Results Per Page:</label>
          <span class="col-sm-8">
             <%= select_tag 'results_per_page',options_for_select([['10',10], ['20',20],['30',30]]), :prompt => "select Results Per Page", :class => "form-control" %>
          </span> <div class="clearfix"></div></div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="bookISBN" class="col-sm-4 control-label">Sort By:</label>
          <span class="col-sm-8">
             <%= select_tag 'sort_by',options_for_select([['Ascending',:ascending], ['Descending',:descending]]), :prompt => "Select Order", :class => "form-control" %>
          </span> <div class="clearfix"></div></div>
      </div>
    <div class="clearfix m-b-30"></div>
   <div class="col-lg-12 col-md-12 col-sm-12 colx-12 text-right">
    <%= button_tag fa_icon("search", text: "Search"), :class => "btnBlack btn-sm", type: :submit %>
    <%= button_tag fa_icon("refresh", text: "Reset"), :class => "btnBlack btn-sm" ,type: :reset%>
      </div>
    <%end%>
    
    </div>
    </div>
  </div>