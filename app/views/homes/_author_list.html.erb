<h1 class='sectionHeading'>BOOKS BY AUTHOR</h1>
<div class='row placeholders'>
  <div class='clearfix'></div>
	<ul class='pagination'>
	  <% ('A'..'Z').each do |letter| %> 
	    <li><%= link_to letter, get_author_homes_path(:letter=>letter)%>
	    </li>
	  <%end%>
	</ul>
	<div class="clearfix m-b-30"></div>
		<%if @books.present?%>
			<%@books.each do |book| %>
			  <div class="form-group">
			    <div class="col-md-12">
			    	<h3><%= link_to truncate(book.books_contributor.first_name+" "+book.books_contributor.last_name, length: 14), books_by_author_homes_path(:first_name => book.books_contributor.first_name,:last_name => book.books_contributor.last_name), :remote => true %><h3>
			    </div>
			  </div>
			<%end%>
		<%end%>
	</div>
	<div class="clearfix"></div>
	  <div class="col-md-12 mt20">
	    <div class="pull-right">
	      <div class="pagination-frontend">
	        <nav aria-label="Page navigation" style="clear:both;"> 
	          <%= will_paginate @books,renderer: BootstrapPagination::Rails %>
	        </nav>  
	      </div>
	    </div>
	    <div class="clearfix"></div>
	  </div>
	</div>
</div>