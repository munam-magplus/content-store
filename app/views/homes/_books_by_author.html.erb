<h1 class="sectionHeading">Books By Author</h1>
<div class="row placeholders">
<div class="clearfix"></div>
	<ul class="pagination">
	  <%("A".."Z").each do |letter| %> 
	  <li><%= link_to letter, books_by_author_homes_path(:letter=>letter)%></li>
	  <%end%>
	</ul>
	<div class="clearfix m-b-30"></div>
		<%@books.each do |book| %>
		  <div class="form-group">
		    <div class="col-sm-2 text-center">
		      <%= image_tag book.logo.url(:original) , :class => "imgPopover"%><br>
		        <p><%= book.book_title%></p>
		    </div>
		  </div>
		<%end%>
	</div>
	<div class="clearfix"></div>
	  <div class="col-md-12 mt20">
	    <div class="pull-right">
	      <div class="pagination-frontend">
	        <nav aria-label="Page navigation" style="clear:both;"> 
	          <%= will_paginate @books,renderer: BootstrapPagination::Rails %>
	        </nav>  
	      </div>
	    </div>
	    <div class="clearfix"></div>
	  </div>
	</div>
</div>