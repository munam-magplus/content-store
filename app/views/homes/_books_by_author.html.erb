<% if @publisher.domain_name == "mlbooksinternational" %>
	<div class="container" >
	  <div class="row">
	    <div class="col-sm-12">
	      <div class="border_wrapper padding10px mt5">
	        <h1 class="heading1 border_bottom ">AUTHOR(S):</h1>
	        <div class="mt20 border_bottom ">
	        </div>
					<%@books.each do |book| %>
	        <div class="mt20 nopadding">
	        <ul id="demoOne" class="description   margin_left5px">
	        <li><%= image_tag book.logo.url(:original) , :class => "imgPopover"%><br>
			      <h1><%= link_to truncate(book.book_title, length: 10), books_description_homes_path(:book_id => book.id), :remote => true %></h1>		
			    </li>
					<li class="ln-R ln-r" style="display: none;"><a href="/author/Rob+Ferrier">Rob Ferrier</a>
						<div class="display_none"> <h1 title="Rob+Ferrier">Rob+Ferrier</h1></div>
					</li>
					</ul>
	        </div>
	        <% end %>	        
	      </div>
	    </div>
	  </div>
	</div> 
<% else %>
	<h1 class="sectionHeading">BOOKS BY AUTHOR</h1>
	<div class="row placeholders">
	<div class="clearfix"></div>
	<div class="clearfix m-b-30"></div>
		<%@books.each do |book| %>
		  <div class="form-group">
		    <div class="col-sm-2 text-center">
		      <%= image_tag book.logo.url(:original) , :class => "imgPopover"%><br>
		      <p><%= link_to truncate(book.book_title, length: 10), books_description_homes_path(:book_id => book.id), :remote => true %></p>
		    </div>
		  </div>
		<%end%>
	</div>
		<div class="clearfix"></div>
		  <div class="col-md-12 mt20">
		    <div class="pull-right">
		      <div class="pagination-frontend">
		        <nav aria-label="Page navigation" style="clear:both;"> 
		          <%= will_paginate @books,renderer: BootstrapPagination::Rails %>
		        </nav>  
		      </div>
		    </div>
		    <div class="clearfix"></div>
		  </div>
		</div>
	</div>
<% end %>