<h1 class="sectionHeading">BOOKS BY AUTHOR</h1>
<div class="row placeholders">
 <div class="clearfix m-b-30"></div>
	<%@books.each do |book| %>
	  <div class="form-group">
	    <div class="col-sm-2 text-center">
	      <%= image_tag book.logo.url(:original) , :class => "imgPopover"%><br>
	        <p><%= link_to truncate(book.book_title, length: 10), books_description_homes_path(:book_id => book.id), :remote => true %></p>
	    </div>
	  </div>
	<%end%>
	<div class="clearfix"></div>
	  <div class="col-md-12 mt20">
	    <div class="pull-right">
	      <div class="pagination-frontend">
	        <nav aria-label="Page navigation" style="clear:both;"> 
	          <%= will_paginate @books,renderer: BootstrapPagination::Rails %>
	        </nav>  
	      </div>
	    </div>
	    <div class="clearfix"></div>
	  </div>
	</div>
</div>