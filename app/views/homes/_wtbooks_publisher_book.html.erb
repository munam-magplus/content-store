<div class="container-fluid">
  <div class="row">
    <% if @books.present? %>
      <% @books.each do |f|%>
        <div class="col-sm-8 col-md-9">
          <h1 class="sectionHeading">FEATURED BOOKS</h1>
          <div class="row placeholders">
            <div class="col-xs-6 col-sm-3  col-md-2 placeholder"> <img src="images/books/9781280141898-T-FC.jpg" class="img-responsive center-block" alt="">
              <h4><%= link_to truncate(f.book_title, length: 10), books_description_homes_path(:book_id => f.id) %></h4>
              <span class="text-muted">
                <%= truncate(f.books_contributor.first_name+" "+f.books_contributor.last_name, length: 14) %>
              </span> 
            </div>
            <div style="clear:both;"></div>
            <div class="col-md-12 col-xs-12">
              <%= will_paginate @books,renderer: BootstrapPagination::Rails %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
