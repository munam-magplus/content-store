<!doctype html>
<html>
<head>
<title>Content Store :: Institutional Account </title>
<!-- Latest compiled and minified CSS -->
<%= render :partial => "layouts/header"%>

</head>

<body>
<!--Main Content Start -->
  <section class="content"> 
    <!-- Header -->
    <%= render :partial => "layouts/top_header"%>
    <!-- Header Ends --> 
    <!-- Page Content Start --> 
    <!-- ================== -->
    <div class="wrapper container-fluid">
      <ol class="breadcrumb">
           <li><a href="#">Home</a></li>
         <li><a><%= link_to "Manage User Account",manage_user_account_index_path%></a></li>
         <li><a class="active"><%= link_to "Institutional Account", institution_account_index_path%></a></li>
      </ol>

      <h2 class="H2-L1">Institutional Account</h2>
      <%= form_for(@institution, url: institution_account_index_path) do |f| %>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Select Publisher<sup class="mandatory">*</sup> </label>
            <div class="col-sm-8">
              <%= f.select 'publisher_id',options_from_collection_for_select(Publisher.all, 'id', 'publisher_name'),{ :prompt => "select publisher"},{:class => "form-control"} %>
             
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Lib./Dept. Name</label>
            <span class="col-sm-8">
            <%= f.text_field :libary_name , :class => "form-control" %>
            </span> 
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Institution Name:</label>
            <span class="col-sm-8">
            <%= f.text_field :institution_name , :class => "form-control" %>
            </span> 
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Status</label>
            <span class="col-sm-8">
           <%= f.select 'status',options_for_select(['active', 'inactive', 'pending']), {:prompt => "select status"}, {:class => "form-control"} %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Logo</label>
            <span class="col-sm-8">
              <%= f.file_field :logo , :class => "form-control"%>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <b> Branding Options</b>
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Display Name</label>
            <span class="col-sm-8">
              <%= f.text_field :display_name , :class => "form-control"%>
            </span>
          </div>
        </div>
        <%= f.fields_for :institution_acc_billing_address do |builder| %> 
        <div class="col-md-6">
          <div class="form-group">
             <label for="bookISBN" class="col-sm-4 control-label">Contact First Name</label>
            <span class="col-sm-8">
              <%= builder.text_field :first_name , :class => "form-control" %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
             <label for="bookISBN" class="col-sm-4 control-label">Contact Last Name</label>
            <span class="col-sm-8">
              <%= builder.text_field :last_name , :class => "form-control" %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
             <label for="bookISBN" class="col-sm-4 control-label">Phone</label>
            <span class="col-sm-8">
              <%= builder.text_field :phone , :class => "form-control" %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
             <label for="bookISBN" class="col-sm-4 control-label">Email</label>
            <span class="col-sm-8">
              <%= builder.text_field :email , :class => "form-control" %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
             <label for="bookISBN" class="col-sm-4 control-label">Address</label>
            <span class="col-sm-8">
              <%= builder.text_field :address , :class => "form-control" %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
             <label for="bookISBN" class="col-sm-4 control-label">Address Line 2</label>
            <span class="col-sm-8">
              <%= builder.text_field :address_line2 , :class => "form-control" %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
             <label for="bookISBN" class="col-sm-4 control-label">Address Line 3</label>
            <span class="col-sm-8">
              <%= builder.text_field :address_line3 , :class => "form-control" %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
             <label for="bookISBN" class="col-sm-4 control-label">City</label>
            <span class="col-sm-8">
              <%= builder.text_field :city , :class => "form-control" %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
             <label for="bookISBN" class="col-sm-4 control-label">State / Province</label>
            <span class="col-sm-8">
              <%= builder.text_field :state , :class => "form-control" %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
             <label for="bookISBN" class="col-sm-4 control-label">Postal Code</label>
            <span class="col-sm-8">
              <%= builder.text_field :postal_code , :class => "form-control" %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
             <label for="bookISBN" class="col-sm-4 control-label">Country</label>
            <span class="col-sm-8">
              <% country_name %>
              <%=  builder.select "country", options_from_collection_for_select(@country, "country_code", "country_name"),{prompt: "select country"}, {:class => "form-control"} %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
             <label for="bookISBN" class="col-sm-4 control-label">Comments</label>
            <span class="col-sm-8">
              <%= builder.text_area :comments , :class => "form-control" %>
            </span>
          </div>
        </div>
        <% end %>
        <div class="clearfix"></div>
        <div class="clearfix m-b-30"></div>
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 colx-12 text-right">

            <%= link_to '<i class="fa fa-plus-square-o" aria-hidden="true"></i>Search Institutional Accounts'.html_safe, institution_account_index_path, :id => "button_id", :class => "btn btn-sm pull-left" %>

            <%= button_tag fa_icon("search", text: "Submit"), :class => "btn btn-sm", type: :submit %>

            <%= button_tag fa_icon("refresh", text: "Reset"), :class => "btn btn-sm" ,type: :reset%>
          </div>
        </div>
      <% end %>
    </div>  
    <!-- Footer Start -->
    <%= render :partial => "layouts/footer" %>
    <!-- Footer Ends --> 
  </section>
</body>
</html>
