<html>
  <body class = "body1">
    <div class="div1">
      <h1>User Details</h1>
      <table border="0" cellpadding="10" cellspacing="0">
        <tbody>
          <%= form_for(@inst_admin_user, url: institution_admin_user_path) do |f|%>
            <tr>
              <td>User Role*</td>
              <td>
              <%= f.text_field :role %> <br>
              </td>
            </tr>
            <tr>
              <td height = "25"> Publisher</td>
              <td align = "left">
                <%= f.text_field :publisher %>
              </td>
            </tr>
            <tr>
              <td height = "25"> Institution name* </td>
              <td align = "left">
                <%= f.text_field :institution_name %>
              </td>
            </tr>
            <tr>
              <td height = "25"> User Name</td>
              <td align = "left">
                <%= f.text_field :user_name %>
              </td>
              <td height = "25"> Status</td>
              <td align = "left">
                <%= f.select 'status',options_for_select(['active', 'inactive']) %>
              </td>
            </tr>
            <tr>
              <td height = "25"> First Name*</td>
              <td align = "left">
                <%= f.text_field :first_name %>
              </td>
              <td height = "25"> Last Name*</td>
              <td align = "left">
                <%= f.text_field :last_name %>
              </td>
            </tr>
            <tr>
              <td height = "25"> Email Address* </td>
              <td align = "left">
                <%= f.text_field :email %>
              </td>
              <td height = "25"> Phone </td>
              <td align = "left">
                <%= f.text_field :phone %>
              </td>
            </tr>
            <tr>
              <td height = "25"> Position </td>
              <td align = "left">
                <%= f.text_field :position %>
              </td>
              <td height = "25"> Fax </td>
              <td align = "left">
                <%= f.text_field :fax %>
              </td>
            </tr>
            <tr>
              <td height = "25"> Comments </td>
              <td align = "left">
                <%= f.text_area :comments %>
              </td>
            </tr>
            <tr>
              <td>
                <%= f.submit "Save" %>        
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
  </body>
</html>

