<html>
  <body class = "body1">
    <%= render :partial => '/layouts/header'%>
    <div class="div1">
      <h1>Create Institutional Users</h1>
      <table border="0" cellpadding="10" cellspacing="0">
        <tbody>
          <%= form_for(:institution_admin_user_acc, url: institution_admin_user_index_path) do |f| %>
            <tr>
              <td>User Role*</td>
              <td>
              <%= f.radio_button :role, 'Primary Institution Administrator' %> Primary Institution Administrator
              <%= f.radio_button :role,'Institution Administrator'%> Institution Administrator<br>
              </td>
            </tr>
            <tr>
              <td height = "25"> Publisher</td>
              <td align = "left">
                <%= f.select 'publisher',options_from_collection_for_select(Publisher.all, 'id', 'publisher_name') %>
              </td>
            </tr>
            <tr>
              <td height = "25"> Instituion name</td>
              <td align = "left">
                <%= f.select 'institution_name',options_from_collection_for_select(Publisher.all, 'id', 'publisher_name') %>
              </td>
            </tr>
            <tr id="primary2">
              <td height = "25"> User Name</td>
              <td align = "left">
                <%= f.text_field :user_name, :value => "System Generated" %>
              </td>
              <td height = "25"> Status</td>
              <td align = "left">
                <%= f.select 'status',options_from_collection_for_select(InstitutionAdminUserAcc.all, 'status', 'status') %>
              </td>
            </tr>
            <tr id="institution2">
              <td height = "25"> User Name</td>
              <td align = "left">SA_
                <%= f.text_field :user_name %>
              </td>
              <td height = "25"> Status</td>
              <td align = "left">
                <%= f.select 'status',options_from_collection_for_select(InstitutionAdminUserAcc.all, 'status', 'status') %>
              </td>
            </tr>
            <tr>
              <td align = "left" height = "25" >
                <%= check_box_tag(:billing_contact) %>
                same as institution billing contact        
              </td>
            </tr>
            <tr id="billing">
              <td height = "25"> First Name</td>
              <td align = "left">
                <%= f.text_field :first_name %>
              </td>
              <td height = "25"> Last Name</td>
              <td align = "left">
                <%= f.text_field :last_name %>
              </td>
            </tr>
            <tr>
              <td height = "25"> Email Address </td>
              <td align = "left">
                <%= f.text_field :email %>
              </td>
              <td height = "25"> Phone </td>
              <td align = "left">
                <%= f.text_field :phone %>
              </td>
            </tr>
            <tr>
              <td height = "25"> Position </td>
              <td align = "left">
                <%= f.text_field :position %>
              </td>
              <td height = "25"> Fax </td>
              <td align = "left">
                <%= f.text_field :fax %>
              </td>
            </tr>
            <tr>
              <td height = "25"> Password </td>
              <td align = "left">
                <%= f.password_field :password %>
              </td>
              <td height = "25"> Confirm Password </td>
              <td align = "left">
                <%= f.password_field :confirm_password %>
              </td>
            </tr>
            <tr>
              <td height = "25"> Comments </td>
              <td align = "left">
                <%= f.text_area :comments %>
              </td>
            </tr>
            <tr>
              <td height = "25" align = "left" >
                <%= check_box_tag(:mail) %>
                Send Email Comfirmation to Email Address above        
              </td>
            </tr>
            <tr>
              <td>
                <%= f.submit "Submit" %>        
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
  </body>
</html>

<script>   
$(document).ready(function(){
  $('#primary2').hide();
  $('#institution2').hide();
  $(':radio').change(function (event) {
      var id = $(this).val();
      console.log(id);
      if(id.search("Primary Institution Administrator")!=-1)
      {
        $('#institution2').hide();
        $('#primary2').show();
      } else{
        $('#primary2').hide();
        $('#institution2').show();
      }
  });
});
</script>
