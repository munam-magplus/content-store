<!doctype html>
<html>
<title>Content Store :: Create End Users </title>
<!-- Latest compiled and minified CSS -->
<%= render :partial => "layouts/header"%>
</head>

<body>
<!--Main Content Start -->
  <section class="content"> 
    <!-- Header -->
    <%= render :partial => "layouts/top_header"%>
    <!-- Header Ends --> 
    <!-- Page Content Start --> 
    <!-- ================== -->
    <div class="wrapper container-fluid">
      <ol class="breadcrumb">
           <li><a href="#">Home</a></li>
         <li><a><%= link_to "Manage User Account",manage_user_account_index_path%></a></li>
         <li><a class="active"><%= link_to "Create End User", institution_account_index_path%></a></li>
      </ol>

      <h2 class="H2-L1">Create End Users</h2>
      <%= form_for(:end_user, url: end_user_index_path) do |f| %>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Publisher<sup class="mandatory">*</sup> </label>
            <div class="col-sm-8">
              <%= f.collection_select :publisher, Publisher.all, :id, :publisher_name, :class => "form-control" %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Email<sup class="mandatory">*</sup> </label>
            <div class="col-sm-8">
              <%= f.text_field :email, :class => "form-control" %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Confirm Email<sup class="mandatory">*</sup> </label>
            <div class="col-sm-8">
              <%= f.text_field :confirm_email, :class => "form-control" %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Password</label>
            <span class="col-sm-8">
            <%= f.text_field :password, :class => "form-control" %>
            </span> 
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Confirm Password</label>
            <span class="col-sm-8">
            <%= f.text_field :confirm_password, :class => "form-control" %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">First Name</label>
            <span class="col-sm-8">
            <%= f.text_field :first_name, :class => "form-control" %>
            </span> 
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Last Name</label>
            <span class="col-sm-8">
            <%= f.text_field :last_name, :class => "form-control" %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Country<sup class="mandatory">*</sup> </label>
            <span class="col-sm-8">
            <%= f.text_field :country, :class => "form-control" %>
            </span> 
          </div>
        </div>
        

        <div class="clearfix"></div>
        <div class="clearfix m-b-30"></div>
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 colx-12 text-right">

            <%= link_to '<i class="fa fa-plus-square-o" aria-hidden="true"></i>Search End User'.html_safe, end_user_index_path, :id => "button_id", :class => "btn btn-sm pull-left" %>
            <%= f.submit "Submit", :class => "btn btn-sm" %>
            <%= f.button "Reset", :class => "btn btn-sm", type: :reset %>
          </div>
        </div>
      <% end %>
    </div>  
    <!-- Footer Start -->
    <%= render :partial => "layouts/footer" %>
    <!-- Footer Ends --> 
  </section>
</body>
</html>
