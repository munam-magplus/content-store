<%= render :partial => "#{@publisher.theme_name}"%>

<div class="container-fluid">
  <div class="row">
    <%= render :partial => "wtbooks_subject_sidebar"%>
    <div id='pub_book'>  
    <div class="col-sm-8 col-md-9">
      <ul class="breadcrumb breadcrumb2 print">
        <%= link_to "Home", homes_path%> &gt; Contact Us
      </ul>
      <div class="border_wrapper padding10px">
        <div class="">
          <h1 class="text_uppercase border_bottom heading-main text-uppercase "> Contact Us</h1>
        </div>
       
        <%= form_tag send_mail_homes_path , :class => "form-horizontal" do %>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        
          <div class=" col-sm-12 grayContainer pad20">
            <div class="col-sm-12">
              <p>Please select one of the following message options before you write your message to ensure we can answer your question as quickly as possible:</p>
              <div class="mt20" style="padding:20px"> 
                <%= radio_button_tag 'theme', 'I have a general comment about this site', true %> I have a general comment about this site
                <br><%= radio_button_tag 'theme', 'I have editorial/content related feedback for the publisher' %> I have editorial/content related feedback for the publisher
                <br><%= radio_button_tag 'theme', 'I would like technical support from the Help Desk' %> I would like technical support from the Help Desk
                <br><%= radio_button_tag 'theme', 'I see a problem with this page' %> I see a problem with this page
    				  </div>
            </div>
            <div class="clearfix "></div>
            <hr>
            <div class="col-sm-8">
              <p><em>Fields marked with <sup class="mandatory">*</sup>are compulsory</em></p><br> 
              <fieldset>
                <div class="form-group  ">
                  <label class="col-md-3 control-label" for=""> Your name: <sup class="mandatory">*</sup></label>
                  <div class="col-md-7">
                    <%= text_field_tag :name,"", :class => "form-control" %>
                  </div>
                </div>
                <div class="form-group  mt-20">
                  <label class="col-md-3 control-label" for=""> Your email: <sup class="mandatory">*</sup></label>
                  <div class="col-md-7">
                    <%= text_field_tag :email,"", :required => true ,:class => "form-control" %>
                  </div>
                </div>
                <div class="form-group  mt-20">
                  <label class="col-md-3 control-label" for=""> Subject:</label>
                  <div class="col-md-7">
                    <%= text_field_tag :subject,"", :class => "form-control" %>
                  </div>
                </div>
                <div class="form-group  mt-20">
                  <label class="col-md-3 control-label" for=""> Your message: <sup class="mandatory">*</sup></label>
                  <div class="col-md-7">
                    <%= text_area_tag :message,"", :class => "form-control", :style => "resize:none;", :maxlength => "140", :rows => "7" %>
                  </div>
                </div>
                <div class="form-group  mt-20">
                  <label class="col-md-3" for=""></label>
                  <div class="col-md-7">
                    <label style="padding-left:20px" class="checkbox"><input type="checkbox" name="sendToMyEmailId" value="on">Please send a copy of this message to my email address. </label>
                  </div>
                </div>
                <div>
                  <label class="col-md-3" for=""></label>
                  <div class="col-md-7 " style="padding-left: 5px;">
                    <input type="submit" name="submit" value="Send Message" class="btn btn-small btn-inverse" style="">
                  </div>
                </div>
              </fieldset>
            </div>
          </div>
        <% end %>
        <div class="clearfix"></div>
        <div class="mt10">
          <h1 class="text_uppercase border_bottom heading-main text-uppercase "></h1>
          <div class="col-md-3">
            <h4>Office Address</h4>
            <p><%= @publisher.publisher_address.presence || "" %>
            </p>
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
<%= render :partial => "homes/wtbooks_footer"%>