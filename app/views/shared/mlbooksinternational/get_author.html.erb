<section class="content">
    <!--Header-->
      <%= render :partial => "#{@publisher.theme_name}"%> 
    <!--HeaderEnd-->

    <div class="container-fluid">

      <div class="row">

        <div class='container'>
       
          <div id= 'pub_book'>
            
            <!-- GET Author -->

                 
            <div class="row">
  <div class="col-sm-12">
    <h1 class="heading1 border_bottom ">AUTHOR(S):</h1>
    <div class="mt20 border_bottom ">
      <ul class="pagination pagination-sm nomargin">
        <% ('A'..'Z').each do |letter| %> 
          <li><%= link_to letter, get_author_homes_path(:letter=>letter)%>
          </li>
        <%end%>
      </ul>
    </div>
    <div class="clearfix m-b-30"></div>
    <%if @authors.present?%>
      <%@authors.each do |authname| %>
        <div class="mt20 nopadding">
          <ul id="demoOne" class="description   margin_left5px">  
            <li class="ln-R ln-r">
              <%= link_to truncate(authname, length: 14), books_by_author_homes_path(authname) %>
            </li>
          </ul>
        </div>
      <%end%>
    <%end%>
  </div>
  <div class="clearfix"></div>
  </div>
 </div>
            <!-- End Author -->

          </div>
              
        </div>

      </div>
    </div>

    <footer>
      <%= render :partial => "homes/publisher_footer"%>
    </footer>
  
 
