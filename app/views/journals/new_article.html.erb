<html>
	<body class = "body1">
	  <%= render :partial => '/layouts/header'%>
		<div class="div1">

      <h1>New Article Setup </h1>
      <table border="0" cellpadding="10" cellspacing="0">
        <tbody>
          <%= form_for :journal do |f| %>
            <tr>
              <td>Publisher*:</td>
			        <td><%= f.collection_select :PUB_PUBLISHER_ID, Publisher.all, :id, :PUB_NAME %></td>
          	</tr>
            <tr>
              <td>DOI:</td>
              <td><%= f.text_field :JOC_CODE %></td>
              <td>Content Code*:</td>
              <td><%= f.text_field :JOC_CODE %></td>
            </tr> 
            <tr> 
              <td>Journal Title*:</td>
              <td><%= select_tag(:JOC_CODE, options_for_select([['Select',0],['Issue',1],['Early Bird',2]]))  %></td>
              <td>Article Type*:</td>
              <td><%= select_tag(:JOC_CODE, options_for_select([['Select',0],['Issue',1],['Early Bird',2]]))  %></td>
            </tr>
            <tr>
              <td>Issue Type*:</td>
              <td><%= select_tag(:JOC_CODE, options_for_select([['Select',0],['Regular',1],['Supplement',2],['Double',3]]))  %></td>
            </tr>
            <tr>
              <td>Volume Number*:</td>
              <td><%= f.text_field :JOC_OWNER %></td>
              <td>Volume Title:</td>
              <td><%= f.text_field :JOC_CODE %></td>
            </tr>
            <tr>
              <td>Issue Number*:</td>
              <td><%= f.text_field :JOC_CODE %></td>
              <td>Issue Supplement* :</td>
              <td><%= f.text_field :JOC_DISTRIBUTORS %></td>
            </tr>
            <tr>
              <td>Issue Number Begin*:</td>
              <td><%= f.text_field :JOC_CODE %></td>
              <td>Issue Number End*:</td>
              <td><%= f.text_field :JOC_CODE %></td>
            </tr>
            <tr>
              <td>Access Level*:</td>
              <td><%= select_tag(:JOC_CODE, options_for_select([['Select',0],['Free',1],['Paid',2]]))  %></td>
               <td>Access Languages*:</td>
              <td><%= select_tag(:JOC_CODE, options_for_select([['Select',0],['Polish',1],['English',2]]))  %></td>
            </tr>
            <tr>
              <td>External DRM*:</td>
              <td><%= f.radio_button :JOC_DESCRIPTION, 'Yes'%>Yes
              <%= f.radio_button :JOC_DESCRIPTION, 'No', :checked => true %>No</td>
               <td>Article Sequence Number:</td>
              <td><%= f.text_field :JOC_CODE %></td>
            </tr>
            <tr>
              <td>Publication Date*:</td>
              <td><%= f.text_field :JOC_CODE %></td>
               <td>Issue Cover Date:</td>
              <td><%= f.text_field :JOC_CODE %></td>
            </tr>
            <tr>
              <td>Stock Number:</td>
              <td><%= f.text_field :JOC_CODE %></td>
            </tr>
            <tr>
               <td>Abstract:</td>
              <td><%= f.text_area :JOC_CODE %></td>
            </tr>
            <tr>
              <td><strong>Contributor's Information</strong></td>
            </tr>
            <tr>
            <td colspan="4">
            <div style="min-height:100px; max-height:190px; overflow:auto;">
			<table width="97%" border=0 cellPadding="8" cellSpacing="1" id="contributorTable" bgColor="#cccccc">
				<td align="left" class="tableheader">Role*</td>
				<td height="25" align="left" class="tableheader">Name*</td>
				<td align="left" class="tableheader">Description</td>
			</table>
			</div>
			</td>
			</tr>
          <tr>
          	<td><strong>Content Format</strong></td>
            <td> 
            	<td align="right">
            		<a href="Javascript:onClick=validateFormatListandAddRow('formatTable',3,1)">
            			<%= image_tag("add.gif")%>
            		</a>&nbsp;&nbsp;
            		<a href="Javascript:onClick=deleteRowModified('formatTable',3,1,document.getElementById('formContentPrice').selFomatDataCK)">
            			<%= image_tag("remove.gif")%>
            		</a>&nbsp;
            	</td>
            </td>
              <tr>
                <td colspan="4">
                	<div style="min-height:90px; max-height:200px; overflow:auto;">
<table width="97%" border=0 cellPadding="8" cellSpacing="1" id="formatTable" bgColor="#cccccc">
<tbody>
<tr>
<td width="3%" height="25" class="tableheader">
	<input type="checkbox" name="checkboxFormat" value="checkbox" onClick="applyToAllCheckBox('formContentPrice','selFomatDataCK',this);" />
</td>
<td height="25" align="left" class="tableheader">Format</td>
<td align="left" class="tableheader">DOI</td>
</tr>
</table>
</div>
 </td>
            </tr>
            <tr>
              <td><strong>Base Online Access</strong></td>
              <td align="right">
              	<a href="Javascript:onClick=validateBOAListandAddRow('baseONLPriceTable',4,1)"><%= image_tag("add.gif")%>
              	<a href="Javascript:onClick=deleteRowModified('baseONLPriceTable',4,1,document.getElementById('formContentPrice').selbaseONLPriceDataCK)"><%= image_tag("remove.gif")%>
              </td>
            </tr>
            <tr>
              <td colspan="4">
              	<div style="min-height:90px; max-height:200px; 		overflow:auto;" id="onlinePriceDiv">
									<table width="97%" border=0 cellPadding="8"
										cellSpacing=1 bgcolor="#cccccc"  id="baseONLPriceTable">
										<tbody>
											<tr>
												<td height="25" class="tableheader">
													<input type="checkbox" name="checkbox5" value="checkbox" onclick="applyToAllCheckBox('formContentPrice','selbaseONLPriceDataCK',this);" />
												</td>
												<td height="25" align="left" class="tableheader">Country</td>
												<td align="left" class="tableheader">Currency</td>
												<td align="left" class="tableheader">Price</td>
											</tr>
											<tr>
												<td width="15" height="25" bgcolor="#fbfbfb"><input type="checkbox"name="selbaseONLPriceDataCK" value="checkbox" />	</td>
												<td bgcolor="#fbfbfb">
													<div id="countryOnlineDiv" >
														<%= collection_select(:PUY_PUBLISHER_COUNTRY_ID, 0, Countryname.all, :id, :CON_COUNTRY_NAME) %>
													</div>
												</td>
	  										<td bgcolor="#fbfbfb"  >
	  											<div id="currencyOnlineDiv" >
														<%= select_tag(:JOC_CODE, options_for_select([['Select',0],['Polish Zloty Default',1],['US Dollar',2]]))  %>
													</div>
	  										</td>
	  										<td bgcolor="#fbfbfb"  >
													<input type="text" name="contentFormatOnlinePrices[0].price" size="10" value="0.0" onchange="validateCurrency(this);" class="text_field">	
												</td>
											</tr>
										</tbody>
            			</table>
								</div>
	 						</td>
            </tr>
            <td><strong>Base Download Price</strong></td>
            <td align="right">
            	<a href="Javascript:onClick=validateBOAListandAddRow('baseONLPriceTable',4,1)"><%= image_tag("add.gif")%>
            		<a href="Javascript:onClick=deleteRowModified('baseONLPriceTable',4,1,document.getElementById('formContentPrice').selbaseONLPriceDataCK)"><%= image_tag("remove.gif")%>
            </td>
                </tr>
                <tr>
                  <td colspan="4"><div style="min-height:90px; max-height:200px; overflow:auto;" id="onlinePriceDiv">
	<table width="97%" border=0 cellPadding="8"
	cellSpacing=1 bgcolor="#cccccc"  id="baseONLPriceTable">
	
	<tbody>
	
	<tr>
	<td height="25" class="tableheader"><input type="checkbox" name="checkbox5" value="checkbox" onclick="applyToAllCheckBox('formContentPrice','selbaseONLPriceDataCK',this);" />	</td>
	<td height="25" align="left" class="tableheader">Country</td>
	<td align="left" class="tableheader">Currency</td>
	<td align="left" class="tableheader">Price</td>
	</tr>
	
	
	
	
	
	<tr>
	<td width="15" height="25" bgcolor="#fbfbfb"><input type="checkbox"name="selbaseONLPriceDataCK" value="checkbox" />	</td>
	<td bgcolor="#fbfbfb">
		<div id="countryOnlineDiv" >
		<%= collection_select(:PUY_PUBLISHER_COUNTRY_ID, 0, Countryname.all, :id, :CON_COUNTRY_NAME) %>	
		</div>
	</td>
	  <td bgcolor="#fbfbfb"  >
	  	<div id="currencyOnlineDiv" >
		<%= select_tag(:JOC_CODE, options_for_select([['Select',0],['Polish Zloty Default',1],['US Dollar',2]]))  %>	</div>
	  </td>
	  <td bgcolor="#fbfbfb"  >
		<input type="text" name="contentFormatOnlinePrices[0].price" size="10" value="0.0" onchange="validateCurrency(this);" class="text_field">	</td>
	</tr></table>
</div>
	 </td>
</tr>
</tr>

            

            <%= f.submit "Submit" %>

          <% end %>
        </tbody>
      </table>
    </div>
  </body>
</html>
