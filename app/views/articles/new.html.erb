<!doctype html>
<html>
  <head>
  <title>Content Store :: Create Article </title>
  <!-- Latest compiled and minified CSS -->
      <!-- Header -->
      <%= render :partial => "layouts/top_header"%>
      <!-- Header Ends --> 
  </head>

  <body>
  <!-- Aside Start-->
    <%= render :partial => "layouts/sidebar"%>
    <!-- Aside Ends-->
  <!--Main Content Start -->
    <section class="content"> 
      <!-- Page Content Start --> 
      <!-- ================== -->
      <div class="wrapper container-fluid">
        <ol class="breadcrumb">
             <li><a href="#">Home</a></li>
           <li><a><%= link_to "Manage User Account",manage_user_account_index_path%></a></li>
           <li><a class="active"><%= link_to "Search Article", institution_account_index_path%></a></li>
        </ol>

        <h2 class="H2-L1">Create Article</h2>
        <%= form_for @article, url: articles_path do |f| %>
          <div class="col-md-6">
            <div class="form-group">
              <label for="taskName" class="col-sm-4 control-label">Publisher<sup class="mandatory">*</sup> </label>
              <div class="col-sm-8">
                <%= f.collection_select :publisher, Publisher.all, :id, :publisher_name, :class => "form-control" %>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="taskName" class="col-sm-4 control-label">DOI<sup class="mandatory">*</sup> </label>
              <div class="col-sm-8">
                <%= f.text_field :doi, :class => "form-control" %>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="taskName" class="col-sm-4 control-label">Content Code<sup class="mandatory">*</sup> </label>
              <div class="col-sm-8">
                <%= f.text_field :content_code, :class => "form-control" %>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="bookISBN" class="col-sm-4 control-label">Journal Title</label>
              <span class="col-sm-8">
              <%= f.select(:journal_title, options_for_select([['Select',0],['Issue',1],['Early Bird',2]]))  %>
              </span> 
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="bookISBN" class="col-sm-4 control-label">Article Type</label>
              <span class="col-sm-8">
              <%= f.select(:article_type, options_for_select([['Select',0],['Issue',1],['Early Bird',2]]))  %>
              </span>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="bookISBN" class="col-sm-4 control-label">Issue Type</label>
              <span class="col-sm-8">
              <%= f.select(:issue_type, options_for_select([['Select',0],['Regular',1],['Supplement',2],['Double',3]]))  %>
              </span> 
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="bookISBN" class="col-sm-4 control-label">Volume Number</label>
              <span class="col-sm-8">
              <%= f.text_field :volume_number, :class => "form-control"  %>
              </span>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="bookISBN" class="col-sm-4 control-label">Volume Title</label>
              <span class="col-sm-8">
              <%= f.text_field :volume_title, :class => "form-control"  %>
              </span> 
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="bookISBN" class="col-sm-4 control-label">Issue Number</label>
              <span class="col-sm-8">
               <%= f.text_field :issue_number, :class => "form-control"  %>
              </span>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="bookISBN" class="col-sm-4 control-label">Issue Supplement</label>
              <span class="col-sm-8">
              <%= f.text_field :issue_supplement, :class => "form-control"  %>
              </span> 
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="bookISBN" class="col-sm-4 control-label">Issue Number Begin</label>
              <span class="col-sm-8">
              <%= f.text_field :issue_number_begin, :class => "form-control"  %>
              </span>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="bookISBN" class="col-sm-4 control-label">Issue Number End</label>
              <span class="col-sm-8">
              <%= f.text_field :issue_number_end, :class => "form-control"  %>
              </span> 
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="bookISBN" class="col-sm-4 control-label">Access Level</label>
              <span class="col-sm-8">
              <%= f.select(:access_level, options_for_select([['Select',0],['Free',1],['Paid',2]]))  %>
              </span>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="taskName" class="col-sm-4 control-label">Access Languages<sup class="mandatory">*</sup> </label>
              <span class="col-sm-8">
              <%= f.select(:article_language, options_for_select([['Select',0],['Polish',1],['English',2]]))  %>
              </span> 
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="taskName" class="col-sm-4 control-label">External DRM<sup class="mandatory">*</sup> </label>
              <span class="col-sm-8">
              <%= f.radio_button :external_drm, 'Yes'%>Yes
              <%= f.radio_button :external_drm, 'No', :checked => true %>No
              </span> 
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="taskName" class="col-sm-4 control-label">Article Sequence Number<sup class="mandatory">*</sup> </label>
              <span class="col-sm-8">
              <%= f.text_field :article_sequence_number, :class => "form-control" %>
              </span> 
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="taskName" class="col-sm-4 control-label">Publication Date<sup class="mandatory">*</sup> </label>
              <span class="col-sm-8">
              <%= f.text_field :publisher_date, :id => 'from', :class => "form-control" %>
              </span> 
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="taskName" class="col-sm-4 control-label">Issue Cover Date<sup class="mandatory">*</sup> </label>
              <span class="col-sm-8">
              <%= f.text_field :issue_cover_date, :id => 'to', :class => "form-control" %>
              </span> 
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="taskName" class="col-sm-4 control-label">Stock Number<sup class="mandatory">*</sup> </label>
              <span class="col-sm-8">
              <%= f.text_field :stock_number, :class => "form-control" %>
              </span> 
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="taskName" class="col-sm-4 control-label">Abstract<sup class="mandatory">*</sup> </label>
              <span class="col-sm-8">
              <%= f.text_area :abstract, :class => "form-control" %>
              </span> 
            </div>
          </div>
          <%= f.fields_for :article_info do |builder| %>
            <h4>Contributor's Information</h4>
            <div class="row">
              <div class="table-responsive" style="overflow-x: inherit;">
                <table class="table table-bordered" id="participantTable">
                  <thead>
                    <tr>
                    <th>Role<sup class="mandatory">*</sup></th>
                    <th>Name<sup class="mandatory">*</sup></th>
                    <th>Description</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr class="participantRow">
                      <th></th>
                      <th></th>
                      <th></th>
                    </tr>                            
                  </tbody>
                </table>
              </div>                                           
            </div>
            <h4>Content Format</h4>
            <a href="Javascript:onClick=validateFormatListandAddRow('formatTable',3,1)">
                              <%= image_tag("add.gif")%>
                            </a>&nbsp;&nbsp;
                            <a href="Javascript:onClick=deleteRowModified('formatTable',3,1,document.getElementById('formContentPrice').selFomatDataCK)">
                              <%= image_tag("remove.gif")%>
                            </a>&nbsp;
            <div class="row">
              <div class="table-responsive" style="overflow-x: inherit;">
                <table class="table table-bordered" id="participantTable">
                  <thead>
                    <tr>
                    <th><input type="checkbox" name="checkboxFormat" value="checkbox" onClick="applyToAllCheckBox('formContentPrice','selFomatDataCK',this);" /></th>
                    <th>Format<sup class="mandatory">*</sup></th>
                    <th>DOI</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr class="participantRow">
                      <th><input type="checkbox"name="selbaseONLPriceDataCK" value="checkbox" /></th>
                      <th><%= builder.text_field :content_format_format %></th>
                      <th><%= builder.text_field :content_format_doi %></th>
                    </tr>                            
                  </tbody>
                </table>
              </div>                                           
            </div>
            <h4>Base Online Access</h4>
            <a href="Javascript:onClick=validateFormatListandAddRow('formatTable',3,1)">
                              <%= image_tag("add.gif")%>
                            </a>&nbsp;&nbsp;
                            <a href="Javascript:onClick=deleteRowModified('formatTable',3,1,document.getElementById('formContentPrice').selFomatDataCK)">
                              <%= image_tag("remove.gif")%>
                            </a>&nbsp;
            <div class="row">
              <div class="table-responsive" style="overflow-x: inherit;">
                <table class="table table-bordered" id="participantTable">
                  <thead>
                    <tr>
                    <th><input type="checkbox" name="checkboxFormat" value="checkbox" onClick="applyToAllCheckBox('formContentPrice','selFomatDataCK',this);" /></th>
                    <th>Country<sup class="mandatory">*</sup></th>
                    <th>Currency</th>
                    <th>Price</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr class="participantRow">
                      <th><input type="checkbox"name="selbaseONLPriceDataCK" value="checkbox" /></th>
                      <th><%= builder.text_field :base_online_access_country %></th>
                      <th><%= builder.select(:base_online_access_currency, options_for_select([['Select',0],['Polish Zloty Default',1],['US Dollar',2]]))  %></th>
                      <th><input type="text" name="contentFormatOnlinePrices[0].price" size="10" value="0.0" onchange="validateCurrency(this);" class="text_field"></th>
                    </tr>                            
                  </tbody>
                </table>
              </div>                                           
            </div>
            <h4>Base Download Price</h4>
            <a href="Javascript:onClick=validateFormatListandAddRow('formatTable',3,1)">
                              <%= image_tag("add.gif")%>
                            </a>&nbsp;&nbsp;
                            <a href="Javascript:onClick=deleteRowModified('formatTable',3,1,document.getElementById('formContentPrice').selFomatDataCK)">
                              <%= image_tag("remove.gif")%>
                            </a>&nbsp;
            <div class="row">
              <div class="table-responsive" style="overflow-x: inherit;">
                <table class="table table-bordered" id="participantTable">
                  <thead>
                    <tr>
                    <th><input type="checkbox" name="checkboxFormat" value="checkbox" onClick="applyToAllCheckBox('formContentPrice','selFomatDataCK',this);" /></th>
                    <th>Country<sup class="mandatory">*</sup></th>
                    <th>Currency</th>
                    <th>Price</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr class="participantRow">
                      <th><input type="checkbox"name="selbaseONLPriceDataCK" value="checkbox" /></th>
                      <th><%= builder.text_field :base_download_price_country %></th>
                      <th><%= builder.select(:base_download_price_currency, options_for_select([['Select',0],['Polish Zloty Default',1],['US Dollar',2]]))  %>  </div></th>
                      <th><%= builder.text_field :base_download_price_price %></th>
                    </tr>                            
                  </tbody>
                </table>
              </div>                                           
            </div>        
          <% end %>
          <div class="clearfix"></div>
          <div class="clearfix m-b-30"></div>
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 colx-12 text-right">
              <%= link_to '<i class="fa fa-plus-square-o" aria-hidden="true"></i>Search Article'.html_safe, search_article_index_path, :id => "button_id", :class => "btn btn-sm pull-left" %>
              <%= f.submit "Submit", :class => "btn btn-sm" %>
              <%= f.button "Reset", :class => "btn btn-sm", type: :reset %>
            </div>
          </div>
        <% end %>
      </div>  
      <!-- Footer Start -->
      <%= render :partial => "layouts/footer" %>
      <!-- Footer Ends --> 
    </section>
  </body>
</html>