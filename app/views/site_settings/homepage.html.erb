<!doctype html>
<html>
<head>
<title>Content Store :: Homepage Management</title>
<!-- Latest compiled and minified CSS -->
    <!-- Header -->
   <%= render :partial => "layouts/top_header"%>
    <!-- Header Ends --> 
</head>

<body>
  <!-- Aside Start-->
    <%= render :partial => "layouts/sidebar"%>
    <!-- Aside Ends-->
  <!--Main Content Start -->
  <section class="content"> 
    <!-- Page Content Start --> 
    <!-- ================== -->
    <div class="wrapper container-fluid">
      <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a> Manage User Account </a></li>
        <li> <a>Homepage Management</a></li>
        <div class="pull-right hidden">
          <li><a href="#">Browse by Chapter</a></li>
          <li><a href="#">Browse by Book </a></li>
        </div>
      </ol>
      <h2 class="H2-L1">Homepage Management</h2>
      <%= form_tag new_homepage_site_settings_path, :method => 'get', :remote => true do  %>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Publisher</label>
            <div class="col-sm-8">
            <%= select_tag 'id',options_from_collection_for_select(Publisher.all, 'id', 'publisher_name'), :prompt => "Select Publisher", :class => "form-control", :style => "background-color: #eee", :presence => true %>
            </div>
            <div class="clearfix"></div>            
          </div>
        </div>
        <div class="clearfix m-b-30"></div>
        <div class="col-lg-12 col-md-12 col-sm-12 colx-12 text-right">
          <%= button_tag fa_icon("pencil", text: "Click to Update Record"), :class => "btn btn-sm", type: :submit %>
        </div>
      <%end%>
      <div class="clearfix m-b-30"></div>
      <div id="homepage_result"></div>
    </div>
      <!-- Page Content Ends --> 
      <!-- ================== --> 
    
      <!-- Footer Start -->
    <%= render :partial => "layouts/footer" %>
      <!-- Footer Ends --> 
  </section>
</body>
</html>