<%= form_for(contact)  do |f| %>
<sup class="mandatory">*</sup>Indicates required field
    <div class="col-md-6">
      <div class="form-group">
        <label for="Email">Email<sup class="mandatory">*</sup></label>
           <%= f.email_field :email , autofocus: true, :class => "form-control", :placeholder => "Enter your Email" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
            <label for="Subject" >Subject <sup class="mandatory">*</sup></label>
              <%= f.text_field :subject , autofocus: true, :class => "form-control", :placeholder => "Enter your Subject" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
            <label for="Topic" >Topic <sup class="mandatory">*</sup></label>
              <%= f.text_field :topic , autofocus: true, :class => "form-control", :placeholder => "Enter your topic" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
            <label for="phone" >Phone Number <sup class="mandatory">*</sup></label>
              <%= f.number_field :phone_number , autofocus: true, :class => "form-control", :placeholder => "Enter Phone Number" %>
              (Please include country and city codes)
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
            <label for="Fax" >Fax Number <sup class="mandatory">*</sup></label>
              <%= f.number_field :fax_number , autofocus: true, :class => "form-control", :placeholder => "Enter Fax Number" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
            <label for="Comments" >Comments<sup class="mandatory">*</sup></label>
              <%= f.text_area :comments , autofocus: true, :class => "form-control", :placeholder => "Comments" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 colx-12 text-right">
        <%= button_tag fa_icon("plus-square-o", text: "Submit"), :class => "btn btn-sm", type: :submit %>

        <%= button_tag fa_icon("refresh", text: "Reset"), :class => "btn btn-sm" ,type: :reset%>
      </div>
    </div>
<% end %>

