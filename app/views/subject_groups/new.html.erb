<!doctype html>
<html>
<title>Content Store :: Create Primary Subject Group</title>
<!-- Latest compiled and minified CSS -->
<%= render :partial => "layouts/header"%>
</head>

<body>
<!--Main Content Start -->
  <section class="content"> 
    <!-- Header -->
    <%= render :partial => "layouts/top_header"%>
    <!-- Header Ends --> 
    <!-- Page Content Start --> 
    <!-- ================== -->
    <div class="wrapper container-fluid">
      <ol class="breadcrumb">
           <li><a href="#">Home</a></li>
         <li><a><%= link_to "Manage User Account",manage_user_account_index_path%></a></li>
         <li><a class="active"><%= link_to "Create Primary Subject Group", institution_account_index_path%></a></li>
      </ol>

      <h2 class="H2-L1">Create Primary Subject Group</h2>
      <%= form_for @subject_group, validate: true do |f| %>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Publisher<sup class="mandatory">*</sup> </label>
            <div class="col-sm-8">
              <%= f.collection_select :publisher, Publisher.all, :id, :publisher_name, :class => "form-control" %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Subject Group Level<sup class="mandatory">*</sup> </label>
            <div class="col-sm-8">
              <%= f.text_field :subject_group_level %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Subject Group Code<sup class="mandatory">*</sup> </label>
            <div class="col-sm-8">
              <%= f.text_field :subject_group_code %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Subject Group Name</label>
            <span class="col-sm-8">
            <%= f.text_field :subject_group_name %>
            </span> 
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Confirm Password</label>
            <span class="col-sm-8">
            <%= f.text_field :guest_user_view_limit %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">First Name</label>
            <span class="col-sm-8">
            <%= f.text_field :authentication_user_view_limit, :class => "form-control" %>
            </span> 
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bookISBN" class="col-sm-4 control-label">Last Name</label>
            <span class="col-sm-8">
            <%= f.text_field :discount_percentage, :class => "form-control" %>
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Country<sup class="mandatory">*</sup> </label>
            <span class="col-sm-8">
            <%= f.text_field :viewability_percentage, :class => "form-control" %>
            </span> 
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Select Language * <sup class="mandatory">*</sup> </label>
            <span class="col-sm-8">
            <%= f.select(:language, options_for_select([['Select',0],[' Dansk',1],['Polish',2],['Latvian',3],['English',4]]))  %>
            </span> 
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">User Type<sup class="mandatory">*</sup> </label>
            <span class="col-sm-8">
              <%= f.radio_button :user_type, 'mps' %>MPS
              <%= f.radio_button :user_type, 'publisher' %>Publisher
              <%= f.radio_button :user_type, 'member_publisher' %>Member Publisher
            </span> 
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Role<sup class="mandatory">*</sup> </label>
            <span class="col-sm-8">
              <%= f.select(:role, options_for_select([['Please Select',0],[' MPS Admin',1],['Publisher',2],['Member Publisher',3],['Member Publisher Role with QA',4]]))  %>
            </span> 
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="taskName" class="col-sm-4 control-label">Publisher (s)<sup class="mandatory">*</sup> </label>
            <div class="col-sm-8">
              <%= f.text_field :publishers, :class => "form-control" %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <span class="col-sm-8">
             <%= check_box_tag(:mail) %>Send Email Comfirmation to Email Address above 
            </span> 
          </div>
        </div>
        <div class="clearfix"></div>
        <div class="clearfix m-b-30"></div>
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 colx-12 text-right">

            <%= link_to '<i class="fa fa-plus-square-o" aria-hidden="true"></i>Search Admin User'.html_safe, admin_user_index_path, :id => "button_id", :class => "btn btn-sm pull-left" %>
            <%= f.submit "Submit", :class => "btn btn-sm" %>
            <%= f.button "Reset", :class => "btn btn-sm", type: :reset %>
          </div>
        </div>
      <% end %>
    </div>  
    <!-- Footer Start -->
    <%= render :partial => "layouts/footer" %>
    <!-- Footer Ends --> 
  </section>
</body>
</html>

















